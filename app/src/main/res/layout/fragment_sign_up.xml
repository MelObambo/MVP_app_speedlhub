<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="70dp"
    android:background="@drawable/gradient_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.sign.SignUpFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/login_card_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:text="@string/sign_in_message"
                        android:textAlignment="center"
                        android:textColor="@color/grey_100"
                        android:textSize="@dimen/textSize_400" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/sign_up_title"
                        android:textColor="@color/blue_500"
                        android:textSize="@dimen/textSize_400" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_up_link_text"
                            android:textColor="@color/grey_300"
                            android:textSize="@dimen/textSize_200" />

                        <TextView android:id="@+id/sign_in_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_in_link"
                            android:textColor="@color/blue_500"
                            android:textSize="@dimen/textSize_200" />
                    </LinearLayout>


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:buttonTint="@color/blue_600"
                            android:checked="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/male"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_300" />

                        <RadioButton android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/female"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_300" />

                    </RadioGroup>


                    <EditText
                        android:id="@+id/sign_up_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:layout_marginBottom="15dp"
                        android:autofillHints="name"
                        android:background="@drawable/bg_edit_text_border"
                        android:hint="@string/sign_up_surname_hint"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="@dimen/editText_paddingHorizontal"
                        android:paddingBottom="@dimen/editText_paddingBottom"
                        android:textSize="@dimen/textSize_200" />

                    <EditText
                        android:id="@+id/sign_up_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:layout_marginBottom="15dp"
                        android:autofillHints="name"
                        android:background="@drawable/bg_edit_text_border"
                        android:hint="@string/sign_up_firstname_hint"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="@dimen/editText_paddingHorizontal"
                        android:paddingBottom="@dimen/editText_paddingBottom"
                        android:textSize="@dimen/textSize_200" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_edit_text_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/sign_up_phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editText_height"
                            android:autofillHints="phone"
                            android:background="@android:color/transparent"
                            android:hint="@string/sign_up_phone_hint"
                            android:inputType="phone"
                            android:paddingHorizontal="@dimen/editText_paddingHorizontal"
                            android:paddingBottom="@dimen/editText_paddingBottom"
                            android:textSize="@dimen/textSize_200" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/sign_up_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:layout_marginBottom="15dp"
                        android:autofillHints="phone"
                        android:background="@drawable/bg_edit_text_border"
                        android:hint="@string/sign_up_email_hint"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="@dimen/editText_paddingHorizontal"
                        android:paddingBottom="@dimen/editText_paddingBottom"
                        android:textSize="@dimen/textSize_200" />

                    <EditText
                        android:id="@+id/sign_up_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/editText_height"
                        android:layout_marginBottom="10dp"
                        android:autofillHints="password"
                        android:background="@drawable/bg_edit_text_border"
                        android:hint="@string/sign_up_password_hint"
                        android:inputType="textPassword"
                        android:paddingHorizontal="@dimen/editText_paddingHorizontal"
                        android:paddingBottom="@dimen/editText_paddingBottom"
                        android:textSize="@dimen/textSize_200" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox android:id="@+id/sign_up_check_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView android:id="@+id/terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/terms"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_200"
                            android:layout_toEndOf="@id/sign_up_check_box"/>

                        <TextView android:id="@+id/terms_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_underline"
                            android:text="@string/terms_link"
                            android:textColor="@color/blue_500"
                            android:textSize="@dimen/textSize_200"
                            android:layout_toEndOf="@id/sign_up_check_box"
                            android:layout_below="@id/terms"/>

                        <TextView android:id="@+id/terms_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/terms_end"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_200"
                            android:layout_toEndOf="@id/terms_link"
                            android:layout_below="@id/terms"/>

                        <TextView android:id="@+id/website_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/blue_500"
                            android:textSize="@dimen/textSize_200"
                            android:background="@drawable/bg_underline"
                            android:layout_toEndOf="@id/terms_end"
                            android:layout_below="@id/terms"/>
                    </RelativeLayout>

                    <Button android:id="@+id/sign_up_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_primary_bg"
                        android:text="@string/sign_up_title"
                        android:textAllCaps="false"
                        android:layout_marginTop="5dp"
                        android:clickable="false"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/copyright"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_100" />
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
